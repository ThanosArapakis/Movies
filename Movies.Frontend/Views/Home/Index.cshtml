@using Movies.Frontend.Models.DataTransferObjects
@model IEnumerable<MovieDto>

<div class='container' style="background-color:black; top:50px; width:3000px;">
        <div class='slick-slider' style="width:1100px;">
            @foreach (var movie in Model)
            {
                <div class="slick-track">
                    <div class="slick-slide">
                        <a class="panel" asp-controller="Home" asp-action="Preview" asp-route-id="@movie.Id">
                            <div class="card border-0 p-3 shadow" style="background-color: black; width:inherit;">
                            <img src="@movie.ImagePaths[0]" class="card-img-top rounded" style="width:550px; height:400px;" background-image: url(@movie.ImagePaths[0]); background-repeat: no-repeat;">
                            </div>
                        </a>
                    </div>
                </div>

            }
        </div>
    </div>
