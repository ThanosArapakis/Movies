@using Movies.Frontend.Models.DataTransferObjects
@using Movies.Frontend.Models.Enums

@model MovieDto
<div class="card shadow border-0 mt-4" style="background-image: url("https//localhost:7000@Model.ImagePaths[0]");">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Movie Details</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />

            <div class="border p-3">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" disabled class="form-control border-0 shadow" />
                    <label asp-for="Title" disabled class="ms-2">Title</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Description" class="ms-2">Description</label>
                    <textarea asp-for="Description" rows="5" cols="33" disabled class="form-control shadow">></textarea>
                </div>
                <div class="form-floating py-2 col-12">
                    <input disabled class="form-select" value="@Model.Genre" name="Genre"/>
                    <label asp-for="Genre" class="ms-2">Genre</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ReleaseDate" disabled class="form-control border-0 shadow" />
                    <label asp-for="ReleaseDate" class="ms-2">Release Date</label>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary border  form-control">
                            Return to Home Page
                        </a>
                    </div>
                </div>
            </div>
        </form>
        @if (Model.ImagePaths.Count > 0)
        {
            <div class="container row">

                @foreach (var image in Model.ImagePaths)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="p-0 my-3 border rounded">
                            <div class="card">
                                <img src="@image" class="card-img-top">
                            </div>
                        </div>
                    </div>
                }      
            </div>
        }
    </div>
</div>